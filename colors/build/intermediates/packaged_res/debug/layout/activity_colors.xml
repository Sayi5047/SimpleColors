<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/color_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:elevation="4dp"
            android:padding="16dp"
            android:text="Choose color"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/_demo_color_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:padding="4dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/font3"
            android:textStyle="italic" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/colors_rv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"

            android:padding="4dp">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/bt_color_shadow"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="@dimen/font"
            android:layout_weight="1"
            android:background="@drawable/rounded_rect"
            android:text="applyshadow"
            android:textColor="@color/colorAccent"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:elevation="4dp">

            <Button
                android:id="@+id/bt_color_close"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="@dimen/font"
                android:layout_weight="1"
                android:background="@drawable/rounded_rect"
                android:text="cancel"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/bt_color_choose"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="@dimen/font"
                android:layout_weight="1"
                android:background="@drawable/rounded_rect"

                android:text="Choose"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>